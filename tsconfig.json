{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "allowJs":true,
        "module": "commonjs",
        "lib":["es6", "dom"],
        "baseUrl": "./src",
        "paths":{
            "@components/*": ["/web/components/*"],
            "@pages/*": ["/web/pages/*"],
            "@assets/*": ["/web/assets/*"],
            "@mocks/*": ["/web/mocks/*"],
            "@store/*": ["/web/store/*"]
        }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules"
    ]
}